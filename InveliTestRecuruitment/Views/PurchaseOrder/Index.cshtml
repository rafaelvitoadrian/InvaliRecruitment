@model System.Data.DataTable

@{
    ViewData["Title"] = "Purchase Order";
}

<div class="col-md-6 col-sm-6 text-center col-12">
    <!-- BEGIN PORTLET-->
    <div class="portlet light tasks-widget widget-comments">
        <div class="portlet-title margin-bottom-20">
            <div class="caption caption-md font-red-sunglo">
                <span class="caption-subject theme-font bold uppercase">Purchase Order</span>
            </div>
            <br />
        </div>
        <div class="portlet-body overflow-h">
            <div class="caption caption-md font-red-sunglo">
                <a asp-action="Create" >Create New</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Code
                        </th>
                        <th>
                            Purchase Date
                        </th>
                        <th>
                            Remarks
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Rows[i]["Code"]
                            </td>
                            <td>
                                @Model.Rows[i]["PurchaseDate"]
                            </td>
                            <td>
                                @Model.Rows[i]["Remarks"]
                            </td>
                            <td>
                                <a asp-action="Create" asp-route-id="@Model.Rows[i]["Id"]">Edit</a> |
                                <a asp-action="Details" asp-route-id="@Model.Rows[i]["Id"]">Details</a> |
                                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["Id"]">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- END PORTLET-->
</div>
