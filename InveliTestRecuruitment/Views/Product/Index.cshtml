@model System.Data.DataTable

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Code
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++){
        <tr>
            <td>
                    @Model.Rows[i]["Code"]
            </td>
            <td>
                    @Model.Rows[i]["Name"]
            </td>
            <td>
                    <a asp-action="Create" asp-route-id="@Model.Rows[i]["Id"]">Edit</a> |
                    <a asp-action="Details" asp-route-id="@Model.Rows[i]["Id"]">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["Id"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
