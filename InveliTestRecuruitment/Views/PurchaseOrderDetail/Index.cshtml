@model System.Data.DataTable

@{
    ViewData["Title"] = "Purchase Order Detail";
}

<h1>Purchase Order Detail</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                PurchaseOrderID
            </th>
            <th>
                ProductID
            </th>
            <th>
                Quantity
            </th>
            <th>
                UnitPrice
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++){
        <tr>
            <td>
                    @Model.Rows[i]["PurchaseOrderID"]
            </td>
            <td>
                    @Model.Rows[i]["ProductID"]
            </td>
            <td>
                    @Model.Rows[i]["Quantity"]
            </td>
            <td>
                    @Model.Rows[i]["UnitPrice"]
            </td>
            <td>
                    <a asp-action="Create" asp-route-id="@Model.Rows[i]["Id"]">Edit</a> |
                    <a asp-action="Details" asp-route-id="@Model.Rows[i]["Id"]">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["Id"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
